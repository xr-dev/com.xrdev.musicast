<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="PlaylistName"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:maxLines="1"
        android:ellipsize="marquee"/>

    <TextView
        android:id="@+id/text_playlist_tracks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tracks"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:maxLines="2" 
        android:ellipsize="end"
        android:layout_alignTop="@+id/text_playlist_num_tracks"
        android:layout_toRightOf="@+id/text_playlist_num_tracks" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X"
        android:id="@+id/text_playlist_num_tracks"
        android:layout_below="@+id/text_playlist_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
